<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jcodee.tema01"
    android:versionCode="1"
    android:versionName="1.0">

    <!--
    versionCode -> Versión interna del código
    versionName -> Versión que puede visualizar el usuario
    -->

    <uses-sdk
        android:maxSdkVersion="23"
        android:minSdkVersion="17"
        android:targetSdkVersion="23" />

    <!--
    minSdkVersion -> Versión minima del android
    maxSdkVersion -> Versión máxima del android
    targetSdkVersion -> Versión en la cual se compilará la app
    -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/home"
            android:screenOrientation="portrait">
            <!--
            portrait -> vertical
            landscape -> horizontal
            -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>